<div class="content">
    <div class="row py-3">
        <div class="col-md-12">
            <a class="btn btn-primary btn-lg mb-4 pull-left" href="scraper"><i
                    class="now-ui-icons ui-1_simple-add"></i> Ekstrak Data</a>
        </div>
        <div class="col-md-12">
            <form id="filter_form" action="">
                <div class="row">
                    <div class="col-lg-2 col-md-4 col-6 mb-3">
                        <select name="size" id="size" class="form-control table_input">
                            <option value="15">15</option>
                            <option value="30">30</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                    <div class="col-lg-1 col-md-4 col-6 pl-0 mb-3">
                        <h6>Data</h6>
                    </div>
                    <div class="col-lg-9 col-md-4 col-12">
                        <div class="input-group input-group-alternative input-group-merge table_input">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                            </div>
                            <input class="form-control" name="search" placeholder="Cari..." type="text">
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table" id="jenis_table">
                                    <thead>
                                        <th class="" width="80">Kode</th>
                                        <th class="" width="500">URL</th>
                                        <th class="">Atribut</th>
                                        <th class="">Diekstrak pada</th>
                                        <th class="text-right">Action</th>
                                    </thead>
                                    <tbody>
                                        {{#each data.scrapes}}
                                        <tr>
                                            <td width="80">{{ this.code }}</td>
                                            <td width="500">{{ this.url }}</td>
                                            <td>{{ this.attributes }}</td>
                                            <td>{{ formatedDate this.updatedAt }}</td>
                                            <td><div class="text-right">
                                                <button onclick="editData({{ this.id }})" class="btn btn-primary btn-icon btn-round mb-2 ml-2"><i class="fa fa-edit"></i></button>
                                                <button onclick="deleteData({{ this.id }})" class="btn btn-danger btn-icon btn-round mb-2 ml-2"><i class="fa fa-trash"></i></button></div></td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="row justify-content-between px-3">
                <div class="total_show">
                    <span class="font-disabled">Total Show Data</span>
                    <span class="font-disabled span_box">{{ data.totalItems }}</span>
                    <span class="font-disabled">dari {{ data.totalItems }} Data</span>
                </div>
                <div class="page_navigation">
                </div>
            </div>
        </div>
    </div>
</div>
<div id="modal-form" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="form-data" method="post">
                <input type="hidden" id="_method" name="_method" value="POST">
                <input type="hidden" id="id" name="id">
                <input type="hidden" id="url" name="url">
                <input type="hidden" id="title" name="title">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12 data_form">
                        </div>
                        <div class="col-12 text-right">
                            <button type="submit" class="btn btn-primary">Simpan</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
